<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">







    <TextView
        android:id="@+id/tvnickName"
        android:layout_width="0dp"
        android:background="@color/azul"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/teal_200"
        android:text="John Smith"
        android:textAlignment="center"
        android:textSize="30dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/profilePic"/>
    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/azul"
        android:src="@drawable/user"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/camara"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/azul"
        android:src="@drawable/camara"

        app:layout_constraintTop_toBottomOf="@id/tvnickName"
       app:layout_constraintLeft_toRightOf="@id/profilePic"
        app:layout_constraintBottom_toBottomOf="@id/profilePic"
        app:layout_constraintRight_toLeftOf="@id/mail"/>

    <ImageView
        android:id="@+id/mail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/azul"
        android:src="@drawable/mail"

        app:layout_constraintTop_toBottomOf="@id/tvnickName"
        app:layout_constraintLeft_toRightOf="@id/camara"
        app:layout_constraintRight_toRightOf="parent
"
        app:layout_constraintBottom_toBottomOf="@id/profilePic"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Friends:106"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="168dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintRight_toLeftOf="@id/textView2"
        android:background="@color/azul"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Follorews:81"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="166dp"
        app:layout_constraintTop_toBottomOf="@id/camara"
        app:layout_constraintLeft_toRightOf="@id/textView"
        app:layout_constraintRight_toLeftOf="@id/textView3"
        android:background="@color/azul"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Following:42"
        tools:layout_editor_absoluteX="320dp"
        tools:layout_editor_absoluteY="170dp"
        app:layout_constraintTop_toBottomOf="@id/camara"
        app:layout_constraintLeft_toRightOf="@id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/azul"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="157 Post"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="205dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See All"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="205dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        tools:srcCompat="@tools:sample/backgrounds/scenic"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"


        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Smith:"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="521dp"
        android:textColor="@color/azul"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"

        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19.01.15"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="517dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_marginTop="50dp"

        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="612dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        android:paddingTop="20dp"

        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#Lorem #Ipsum"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="684dp"
        android:textColor="@color/azul"
        app:layout_constraintTop_toBottomOf="@id/textView8"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/textView8"
        android:paddingLeft="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>